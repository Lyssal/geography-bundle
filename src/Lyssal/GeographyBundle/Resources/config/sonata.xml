<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="lyssal.geography.sonata.admin.postal_code.class">Lyssal\GeographyBundle\Sonata\Admin\PostalCodeAdmin</parameter>
        <parameter key="lyssal.geography.sonata.admin.sub_administrative_area.class">Lyssal\GeographyBundle\Sonata\Admin\SubAdministrativeAreaAdmin</parameter>
        <parameter key="lyssal.geography.sonata.admin.language.class">Lyssal\GeographyBundle\Sonata\Admin\LanguageAdmin</parameter>
        <parameter key="lyssal.geography.sonata.admin.country.class">Lyssal\GeographyBundle\Sonata\Admin\CountryAdmin</parameter>
        <parameter key="lyssal.geography.sonata.admin.administrative_area.class">Lyssal\GeographyBundle\Sonata\Admin\AdministrativeAreaAdmin</parameter>
        <parameter key="lyssal.geography.sonata.admin.city.class">Lyssal\GeographyBundle\Sonata\Admin\CityAdmin</parameter>
    </parameters>

    <services>
        <service id="lyssal.geography.sonata.admin.postal_code" class="%lyssal.geography.sonata.admin.postal_code.class%">
            <tag name="sonata.admin" manager_type="orm" group="geography" label="postal_codes" route_builder="sonata.admin.route.path_info" />
            <argument/>
            <argument>%lyssal.geography.entity.postal_code.class%</argument>
            <argument>SonataAdminBundle:CRUD</argument>
        </service>
        <service id="lyssal.geography.sonata.admin.sub_administrative_area" class="%lyssal.geography.sonata.admin.sub_administrative_area.class%">
            <tag name="sonata.admin" manager_type="orm" group="geography" label="sub_administrative_areas" icon="&lt;i class='fa fa-globe'&gt;&lt;/i&gt;" route_builder="sonata.admin.route.path_info" />
            <argument/>
            <argument>%lyssal.geography.entity.sub_administrative_area.class%</argument>
            <argument>SonataAdminBundle:CRUD</argument>
        </service>
        <service id="lyssal.geography.sonata.admin.language" class="%lyssal.geography.sonata.admin.language.class%">
            <tag name="sonata.admin" manager_type="orm" group="geography" label="languages" route_builder="sonata.admin.route.path_info" />
            <argument/>
            <argument>%lyssal.geography.entity.language.class%</argument>
            <argument>SonataAdminBundle:CRUD</argument>
        </service>
        <service id="lyssal.geography.sonata.admin.country" class="%lyssal.geography.sonata.admin.country.class%">
            <tag name="sonata.admin" manager_type="orm" group="geography" label="countries" route_builder="sonata.admin.route.path_info" />
            <argument/>
            <argument>%lyssal.geography.entity.country.class%</argument>
            <argument>SonataAdminBundle:CRUD</argument>
        </service>
        <service id="lyssal.geography.sonata.admin.administrative_area" class="%lyssal.geography.sonata.admin.administrative_area.class%">
            <tag name="sonata.admin" manager_type="orm" group="geography" label="administrative_areas" route_builder="sonata.admin.route.path_info" />
            <argument/>
            <argument>%lyssal.geography.entity.administrative_area.class%</argument>
            <argument>SonataAdminBundle:CRUD</argument>
        </service>
        <service id="lyssal.geography.sonata.admin.city" class="%lyssal.geography.sonata.admin.city.class%">
            <tag name="sonata.admin" manager_type="orm" group="geography" label="cities" route_builder="sonata.admin.route.path_info" />
            <argument/>
            <argument>%lyssal.geography.entity.city.class%</argument>
            <argument>SonataAdminBundle:CRUD</argument>
        </service>
    </services>

</container>
